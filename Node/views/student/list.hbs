<h3>
    <a class="btn btn-secondary" href="/student">Create a new</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Email</th>
                <th>Mobile</th>
                <th>City</th>
                <th>Action</th>
            </tr>
        </thead>
<tbody>
    {{#each list}}
    <tr>
        <td>{{this.fullname}}</td>
        <td>{{this.email}}</td>
        <td>{{this.mobile}}</td>
        <td>{{this.city}}</td>
        <td>
            <a class="btn btn-secondary" href="/student/{{this._id}}">Edit</a>
            <a  class="btn btn-secondary" href="/student/delete/{{this._id}}" onclick="return confirm('Are You sure?');">Delete</a>
        </td>
    </tr>
    {{/each}}
</tbody>       
    </table>

</h3>